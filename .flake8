[flake8]
exclude =
    # No need to traverse our git directory
    .git
    # Do not check the virtual environent
    venv,
    # There's no value in checking cache directories
    __pycache__,
    # The conf and settings files are mostly autogenerated, ignore it
    docs/source/conf.py,
    docker/*config.py,
    settings.py,
    **/settings,
    # This contains our autogenerated migrations
    migrations,
    # This contains our built documentation
    build
max-complexity = 10
max-line-length = 79
select = B,C,E,F,W,T4,B9
ignore = E203,E266,E402,E501,E502,W503,F403,F401,H101,H238,H301,H306
